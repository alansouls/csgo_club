@model csgo_club_web_app.Models.MatchModel
@{
    ViewData["Title"] = "Lobby Match";
}
<link href="~/css/card.css" rel="stylesheet" type="text/css" />
<div class="container">
    <div class="main-body">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 gutters-sm">
            @foreach (var m in Model.GameMatch.Matches)
            {
                var random = new Random();
                var color = String.Format("#{0:X6}", random.Next(0x1000000));
                <div class="col mb-3">
                    <div class="card">
                        <div style="background-color:@color; width:100%; height:100px" alt="Cover" class="card-img-top"></div>
                        <div class="card-body text-center">
                            <img src="@m.User.ProfilePicture" style="width:100px;height:100px;margin-top:-65px" alt="User" class="img-fluid img-thumbnail rounded-circle border-0 mb-3">
                            <h5 class="card-title">@m.User.Name</h5>
                            <h5 class="card-title">@m.User.ADR</h5>
                            <h5 class="card-title">@m.User.Rank</h5>
                        </div>
                        <div class="card-footer">
                        </div>
                    </div>
                </div>
            }
        </div>
        @if (Model.IsLeader)
        {
    <div>
        @if (Model.GameMatch.Status == CsgoClubEF.Entities.MatchStatus.Lobby)
        {
            <a class="btn btn-info" asp-action="Start" asp-controller="Lobby" asp-route-id="@Model.GameMatch.Id" asp-route-ip="@Model.GameMatch.Server.Ip">Start Server</a>
        }
        else if (Model.GameMatch.Status == CsgoClubEF.Entities.MatchStatus.Started)
        {
            @*<form asp-action="Profile" asp-anti-forgery="true" method="post">
                <div class="container">
                    <div class="form-group">
                        <label >Command:</label>
                        <input form="Command"/>
                    </div>
                    <button class="btn btn-primary btn-md p-2" type="submit">
                        Execute Command
                    </button>
                </div>
            </form>*@
            <a class="btn btn-info" asp-action="Stop" asp-controller="Lobby" asp-route-ip="@Model.GameMatch.Server.Ip">Stop Server</a>
        }
        else if (Model.GameMatch.Status == CsgoClubEF.Entities.MatchStatus.Finished)
        {
            <div>
                <h1>Partida encerrada</h1>
                <button>Baixar log</button>
                <button>Baixar replay</button>
            </div>
        }
    </div>
        }
    </div>
</div>